{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "target": "ES6",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "paths": {
      "@/prisma/*": ["./prisma/*"],
      "@/*": ["./src/*"]
    },
    "rootDir": ".",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist", "vite.config.ts"]
}
